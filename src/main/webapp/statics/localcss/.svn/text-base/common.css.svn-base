
#mask {
    margin-top:0px;
    display: none;
    position: fixed;
    height: 100%;
    width: 100%;
    z-index: 100;
    background: #000;
    opacity: .15;
    filter: alpha(opacity=15);
    -moz-opacity: .15;
}

#toastr {
    display: none;
    position: fixed;
    width: 244px;
    height: 45px;
    top: 24px;
    padding: 24px 6px 6px;
    border-radius: 4px;
    font-size: 13px;
    left: 50%;
    margin-left: -166px;
    z-index: 999999999999;
    text-align: center;
}